<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="keyvalue" resource="default" engine="innodb" comment="keyvalue module table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="keyvalue Id"/>
        <column xsi:type="varchar" name="code" nullable="true" length="255" comment="code"/>
        <column xsi:type="varchar" name="value" nullable="true" length="255" comment="value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>